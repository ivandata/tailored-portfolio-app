{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "nanoid": "^3.1.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.3",
    "workbox-broadcast-update": "^5.1.3",
    "workbox-cacheable-response": "^5.1.3",
    "workbox-core": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-google-analytics": "^5.1.3",
    "workbox-navigation-preload": "^5.1.3",
    "workbox-precaching": "^5.1.3",
    "workbox-range-requests": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3",
    "workbox-streams": "^5.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "autoprefixer": "^9",
    "commitlint": "^12.1.4",
    "craco-alias": "^3.0.1",
    "dependency-version-badge": "^1.10.0",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "husky": "^7.0.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-matchmedia-mock": "^1.1.0",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^11.0.1",
    "prettier": "2.3.2",
    "styled-components": "^5.3.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:coverage": "craco test --coverage --watchAll=false",
    "test:badges": "yarn run test:coverage  && jest-coverage-badges",
    "dep:badges": "npx update-badge prettier nanoid styled-components eslint commitlint craco-alias husky",
    "eject": "react-scripts eject",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "bash -c tsc",
    "*.{ts,tsx}": "eslint --fix --max-warnings=0",
    "src/**/*{ts,tsx,js,jsx,mdx,md,json,css,html}": "prettier --write"
  },
  "eslintIgnore": [
    "**/{__tests__,__stories__,__mocks__}/**",
    "**/*.{test,spec,stories,example}.{js,jsx,ts,tsx}"
  ],
  "volta": {
    "node": "14.16.1",
    "npm": "7.13.0",
    "yarn": "1.22.10"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "collectCoverageFrom": [
      "!src/index.tsx",
      "!src/react-app-env.d.ts",
      "!src/reportWebVitals.ts",
      "!src/service-worker.ts",
      "!src/serviceWorkerRegistration.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|(?!deck.gl)|ng-dynamic)"
    ]
  }
}
